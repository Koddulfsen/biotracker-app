# Server Configuration
NODE_ENV=development
PORT=4000

# Database Configuration
DATABASE_URL=postgresql://biotracker:biotracker123@localhost:5432/biotracker
DATABASE_SSL=false

# Auth0 Configuration
AUTH0_DOMAIN=your-domain.auth0.com
AUTH0_CLIENT_ID=your-client-id
AUTH0_CLIENT_SECRET=your-client-secret
AUTH0_AUDIENCE=https://api.biotracker.health

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this
JWT_EXPIRES_IN=24h
REFRESH_TOKEN_SECRET=your-refresh-token-secret
REFRESH_TOKEN_EXPIRES_IN=7d

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret
STRIPE_PRICE_PERSONAL=price_personal_monthly
STRIPE_PRICE_PROFESSIONAL=price_professional_monthly
STRIPE_PRICE_HOSPITAL=price_hospital_monthly

# API Keys
USDA_API_KEY=your-usda-api-key
EDAMAM_APP_ID=your-edamam-app-id
EDAMAM_APP_KEY=your-edamam-app-key

# Frontend URL
FRONTEND_URL=http://localhost:3000

# Email Configuration
SENDGRID_API_KEY=your-sendgrid-api-key
FROM_EMAIL=noreply@biotracker.health

# Redis Configuration (for caching)
REDIS_URL=redis://localhost:6379

# Logging
LOG_LEVEL=debug

# Rate Limiting
RATE_LIMIT_FREE=100
RATE_LIMIT_PREMIUM=1000
RATE_LIMIT_PROFESSIONAL=5000
RATE_LIMIT_ENTERPRISE=50000